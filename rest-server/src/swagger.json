{
  "openapi": "3.0.0",
  "info": {
    "title": "PetStore REST API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/petstores": {
      "get": {
        "summary": "Get all pet stores",
        "operationId": "getAllPetStores",
        "responses": {
          "200": {
            "description": "List of pet stores",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/PetStore"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new pet store",
        "operationId": "createPetStore",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PetStoreInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Pet store created"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PetStore": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "profileUrl": {
            "type": "string"
          },
          "cats": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Cat"
            }
          },
          "dogs": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Dog"
            }
          }
        }
      },
      "PetStoreInput": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "profileUrl": {
            "type": "string"
          }
        },
        "required": ["name", "email", "profileUrl"]
      },
      "Cat": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "breed": {
            "type": "string"
          }
        }
      },
      "Dog": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "breed": {
            "type": "string"
          }
        }
      }
    }
  }
}
